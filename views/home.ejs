<%- include('./partials/start.ejs') %>


    <h1 class="text-center mt-5 mb-5">User</h1>

    <div class="container">


        <a class="btn btn-outline-danger" href="/user">Send New Data</a>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Phone No.</th>
                    <th scope="col">Update</th>
                    <th scope="col">Delete</th>
                </tr>
                </thead>
                <tbody>

                <% data.map((data, no=1) => {  %>
                <tr>
                    <th scope="row"><%= no+1%></th>
                    <td><%= data.firstName%></td>
                    <td><%= data.lastName%></td>
                    <td><%= data.email%></td>
                    <td><%= data.phone%></td>
                    <td><a href="/update/<%= data._id%>" class="btn btn-primary">Update</a></td>
                    <td><a href="/delete/<%= data._id%>" class="btn btn-danger">Delete</a></td>
                </tr>

                <% }) %>

            </tbody>
        </table>
    </div>
    


<%- include('./partials/end.ejs')%>